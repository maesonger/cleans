<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-offset-0">
    <div class="panel panel-default">
      <div class="panel-heading">会社情報を編集（１／３）</div>
      <div class="panel-body">
        <%= form_for(@company) do |f|%>
          <%= render 'layouts/error_messages', model: f.object %>

          <%= hidden_field_tag :user_id, current_user.id %>
          
          <div class = "form-group">
            <%= f.label :name, "会社名"%>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class = "form-group">
            <%= f.label :image_url,"ユーザー画像" %>
            <%= f.file_field :image_url %>
          </div>
          
          <div class = "form-group">
            <%= f.label :email, "メールアドレス"%>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class = "form-group">
            <%= f.label :tel, "電話番号"%>
            <%= f.text_field :tel, class: 'form-control' %>
          </div>
          
          <div class = "text-right">
            <%= f.submit '作業地域編集画面へ',class: 'btn btn-success' %><br />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>