<% if logged_in? %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading"><%= @company.name %>にメール</div>
        <div class="panel-body">
          <%= form_for(@company) do |f| %>
            <div class="form-group">
              <%= f.label :subject, '件名' %>
              <%= f.text_field :subject, class: 'form-control', rows: 1 %>
            </div>
            
            <div class="form-group">
              <%= f.label :information, 'お問い合わせ内容' %>
              <%= f.text_area :information, class: 'form-control', rows: 5 %>
            </div>
  
            <div class="text-right">
              <%= f.submit 'メール送信', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>