<% if logged_in? %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading"><%= @company.name %>をレビュー</div>
        <div class="panel-body">
          <%= form_for(@review, :url => {:controller => :clean_reviews, :action => :create}) do |f| %>
            <div class="form-group">
              <%= hidden_field_tag :user_id, current_user.id %>
              <%= hidden_field_tag :clean_company_id, @company %>
            </div>
            
            <div class = "row">
              <div class="form-group">
                
                <div class="col-xs-5">
                <label for="point">点数</label>
                <select class="form-control" id="point" name="point">
                  <option value="5" selected = "selected">5</option>
                  <option value="4">4</option>
                  <option value="3">3</option>
                  <option value="2">2</option>
                  <option value="1">1</option>
                </select>
                </div>
              </div>
            </div>
            
            
            <div class="form-group">
              <%= f.label :comment, 'レビューコメント' %>
              <%= f.text_area :comment, class: 'form-control', rows: 5 %>
            </div>
  
            <div class="text-right">
              <%= submit_tag 'レビューする', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>